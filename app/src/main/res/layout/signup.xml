<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="secondslash.secondslash.signup">

    <TextView
        android:text="@string/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textSize="20dp"
        android:typeface="sans"
        android:visibility="visible"
        android:textColorHighlight="#32ff29"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/textView4"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="your personal newsfeed"
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/SUemail_id"
            android:hint="Email (example@domain.com)"
            android:layout_below="@+id/textView4"
            android:layout_alignEnd="@+id/SUtextView3"
            android:background="@drawable/edittextstyle"
            android:textAlignment="center"
            android:gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="first name"
            android:ems="10"
            android:id="@+id/SUfname"
            android:layout_below="@+id/SUemail_id"
            android:layout_alignEnd="@+id/SUemail_id"
            android:background="@drawable/edittextstyle"
            android:textAlignment="center"
            android:gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="last name"
            android:ems="10"
            android:id="@+id/SUlname"
            android:layout_below="@+id/first_name"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/first_name"
            android:background="@drawable/edittextstyle"
            android:textAlignment="center"
            android:gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/SUpwd"
            android:layout_below="@+id/last_name"
            android:layout_alignParentStart="true"
            android:hint="password"
            android:layout_alignEnd="@+id/last_name"
            android:background="@drawable/edittextstyle"
            android:textAlignment="center"
            android:gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/SUpwdconf"
            android:layout_below="@+id/etEmail"
            android:layout_alignParentStart="true"
            android:hint="Re-enter password"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edittextstyle"
            android:textAlignment="center"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="LogIn"
        android:id="@+id/tvlogin"
        android:textColor="#133aff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/SUnext"
        android:onClick="login1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="If already have an account?"
        android:id="@+id/textView7"
        android:layout_below="@+id/tvlogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/SUnext"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp"
        android:onClick="register"/>
</RelativeLayout>
